{
  "swagger": "2.0",
  "info": {
    "title": "Anomaly Detection API",
    "version": "1.0.0",
    "description": "API para detectar anomalías en métricas usando Isolation Forest"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/analyze": {
      "post": {
        "summary": "Detectar anomalías",
        "description": "Envía métricas para que el modelo AI detecte anomalías",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "metrics",
            "description": "Array de objetos con métricas",
            "required": true,
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "cpu": { "type": "number" },
                  "memory": { "type": "number" }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Resultados con campo 'anomaly'",
            "schema": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          },
          "400": {
            "description": "Entrada inválida"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    }
  }
}
