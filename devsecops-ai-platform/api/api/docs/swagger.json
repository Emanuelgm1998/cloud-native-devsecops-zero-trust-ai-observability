{
  "openapi": "3.0.0",
  "info": {
    "title": "DevSecOps AI API",
    "version": "1.0.0"
  },
  "paths": {
    "/analyze": {
      "post": {
        "summary": "Detecta anomalías en métricas",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "cpu": { "type": "number" },
                    "memory": { "type": "number" }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resultado con anomalías"
          }
        }
      }
    }
  }
}
